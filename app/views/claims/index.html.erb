<h1>Listing claims</h1>

<table>
  <thead>
    <tr>
      <th>Admin page</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Message</th>
      <th>Is processed</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @claims.each do |claim| %>
      <tr>
        <td><%= claim.admin_page %></td>
        <td><%= claim.email %></td>
        <td><%= claim.phone %></td>
        <td><%= claim.message %></td>
        <td><%= claim.is_processed %></td>
        <td><%= link_to 'Show', claim %></td>
        <td><%= link_to 'Edit', edit_claim_path(claim) %></td>
        <td><%= link_to 'Destroy', claim, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

